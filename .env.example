# =============================================================================
# PFN (Poetry for Neanderthals / CaveTalk) — Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# Backend Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration (used at build time)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=your-username/pfn
TAG=latest

# Domain Configuration (production)
DOMAIN=cavetalk.in
SSL_EMAIL=your-email@example.com

# ---------------------------------------------------------------------------
# Local MongoDB (Docker) Configuration
# These are used by docker-compose to spin up a local Mongo container.
# Change these from the defaults for any shared or non-local environment.
# ---------------------------------------------------------------------------
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=changeme
MONGO_INITDB_DATABASE=cavetalk

# Application-level Mongo user (created by mongo-init script)
PFN_MONGO_USER=pfn_user
PFN_MONGO_PASSWORD=changeme

# Local dev MONGODB_URI (auto-constructed from above, or override directly)
MONGODB_URI=mongodb://pfn_user:changeme@mongo:27017/cavetalk?authSource=cavetalk

# ---------------------------------------------------------------------------
# MongoDB Atlas (production) — get from your Atlas dashboard
# Uncomment and set for production use:
# ---------------------------------------------------------------------------
# MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/cavetalk
